{
  "name": "simple-collaborative-todos",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite dev --open",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky",
    "migrate": "npm exec drizzle-kit generate:sqlite",
    "migrate:clean": "rm -r ./data && npm run migrate",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^4.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.9",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.14",
    "husky": "^9.0.11",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "cycle": "^1.0.3",
    "drizzle-orm": "^0.30.4",
    "esbuild": "^0.20.0",
    "json-diff": "^1.0.6",
    "lodash-es": "^4.17.21",
    "nanostores": "^0.9.5"
  }
}
